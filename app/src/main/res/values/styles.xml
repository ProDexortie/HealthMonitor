    <!-- Компонентные стили -->
    <style name="Widget.HealthMonitor.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">16dp</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>

    <style name="Widget.HealthMonitor.Card.Elevated" parent="Widget.HealthMonitor.Card">
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.HealthMonitor.Card.Outlined" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">16dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutline</item>
    </style>

    <style name="Widget.HealthMonitor.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.HealthMonitor.Button</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="TextAppearance.HealthMonitor.Button" parent="TextAppearance.MaterialComponents.Button">
