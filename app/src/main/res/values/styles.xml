        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="elevation">6dp</item>
    </style>

    <style name="Widget.HealthMonitor.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.HealthMonitor.Caption</item>
