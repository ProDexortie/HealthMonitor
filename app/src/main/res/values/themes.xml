<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения (светлая) -->
    <style name="Theme.HealthMonitor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Основные цвета бренда -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Дополнительные цвета -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Цвета фона и поверхностей -->
        <item name="android:colorBackground">?android:attr/colorBackground_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        <item name="colorOnBackground">@color/on_background_light</item>

        <!-- Цвета ошибок -->
        <item name="colorError">@color/error_light</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/error_container_light</item>
        <item name="colorOnErrorContainer">@color/on_error_container_light</item>

        <!-- Цвета успеха и предупреждения -->
        <item name="colorSuccess">@color/success_light</item>
        <item name="colorWarning">@color/warning_light</item>

        <!-- Статус бар и навигация -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/nav_bar_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Контурные цвета -->
        <item name="colorOutline">@color/outline_light</item>

        <!-- Рипл эффекты -->
        <item name="colorControlHighlight">@color/ripple_light</item>

        <!-- Другие атрибуты темы -->
        <item name="bottomNavigationStyle">@style/Widget.HealthMonitor.BottomNavigationView</item>
        <item name="toolbarStyle">@style/Widget.HealthMonitor.Toolbar</item>
        <item name="materialCardViewStyle">@style/Widget.HealthMonitor.Card</item>
        <item name="textInputStyle">@style/Widget.HealthMonitor.TextInputLayout</item>
        <item name="tabStyle">@style/Widget.HealthMonitor.TabLayout</item>
        <item name="switchStyle">@style/Widget.HealthMonitor.Switch</item>
        <item name="materialDividerStyle">@style/Widget.HealthMonitor.Divider</item>

        <!-- Текстовые стили -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.HealthMonitor.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.HealthMonitor.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.HealthMonitor.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.HealthMonitor.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.HealthMonitor.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.HealthMonitor.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.HealthMonitor.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.HealthMonitor.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.HealthMonitor.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.HealthMonitor.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.HealthMonitor.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.HealthMonitor.Overline</item>
        <item name="textAppearanceButton">@style/TextAppearance.HealthMonitor.Button</item>

        <!-- Скругления -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.HealthMonitor.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.HealthMonitor.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.HealthMonitor.LargeComponent</item>
    </style>

    <!-- Форма маленьких компонентов (например, кнопки, поля ввода, чипы) -->
    <style name="ShapeAppearance.HealthMonitor.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Форма средних компонентов (например, карточки) -->
    <style name="ShapeAppearance.HealthMonitor.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Форма больших компонентов (например, диалоги, bottomsheet) -->
    <style name="ShapeAppearance.HealthMonitor.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Стиль заставки (splash screen) для Android 12+ -->
    <style name="Theme.HealthMonitor.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?android:attr/colorBackground_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">800</item>
        <item name="postSplashScreenTheme">@style/Theme.HealthMonitor</item>
    </style>
</resources>